<h1><%= @place["name"] %></h1>

<h2><%= @place["city"] %>, <%= @place["state"] %></h2>

<h3>Posts</h3>

<ul>
  <% for post in @posts %>
    <li><%= post["last_name"] %>, <%= post["first_name"] %></li>
  <% end %>
</ul>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Back to All Places</a></p>

<p><%= button_to "Delete this place", @place, :method => "delete" %></p>